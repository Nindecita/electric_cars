<%# app/views/home/home.html.erb %>

<div class="container text-center mt-5">
  <h1 class="display-4">¡Bienvenido a la Revolución Eléctrica!</h1>
  <p class="lead">Descubre nuestra flota de autos eléctricos de alta tecnología.</p>
</div>

<div id="carouselExample" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <%= image_tag "car1.jpeg", class: "d-block w-100", alt: "Auto Eléctrico 1" %>
    </div>
    <div class="carousel-item">
      <%= image_tag "descarga.jpeg", class: "d-block w-100", alt: "Auto Eléctrico 2" %>
    </div>
    <div class="carousel-item">
      <%= image_tag "descarga2.jpeg", class: "d-block w-100", alt: "Auto Eléctrico 3" %>
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExample" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Anterior</span>
  </a>
  <a class="carousel-control-next" href="#carouselExample" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Siguiente</span>
  </a>
</div>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-4">
      <h2>Características Destacadas</h2>
