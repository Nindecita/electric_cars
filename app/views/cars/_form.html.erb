<div class="container">
  <%= form_with(model: car, local: true, html: { multipart: true }) do |form| %>
    <% if car.errors.any? %>
      <div class="alert alert-danger">
        <h2><%= pluralize(car.errors.count, "error") %> prohibited this car from being saved:</h2>
        <ul>
          <% car.errors.full_messages.each do |error| %>
            <li><%= error %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :model %>
      <%= form.text_field :model, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :brand %>
      <%= form.text_field :brand, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :year %>
      <%= form.number_field :year, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :autonomy %>
      <%= form.number_field :autonomy, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :rental_price %>
      <%= form.text_field :rental_price, class: "form-control" %>
    </div>

    <div class="form-group mt-2">
      <%= form.label :image_car %>
      <%= form.file_field :image_car, class: "form-control-file" %>
    </div>

    <div class="form-group mt-2">
      <%= form.label :characteristic_ids %>
      <%= form.collection_select :characteristic_ids, Characteristic.all, :id, :name, {}, { multiple: true, class: "form-control" } %>
    </div>

    <div class="form-group mt-4">
      <%= form.submit "Guardar", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

